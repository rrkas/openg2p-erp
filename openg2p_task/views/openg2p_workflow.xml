<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Form View -->
        <record model="ir.ui.view" id="openg2p_workflow_form_view">
            <field name="name">openg2p.workflow.form</field>
            <field name="model">openg2p.workflow</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="id" string="Workflow ID"/>
                                <field name="workflow_type"/>
                                <field name="workflow_stage_count"/>
                                <field name="curr_workflow_stage" force_save="1"
                                       options="{'no_quick_create':True,'no_create_edit':True,'no_create':True}"/>
                                <field name="curr_workflow_stage_index"/>
                                <field name="workflow_completed"/>
                            </group>
                            <group>
                                <field name="context"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Tree View -->
        <record model="ir.ui.view" id="openg2p_workflow_tree_view">
            <field name="name">openg2p.workflow.tree</field>
            <field name="model">openg2p.workflow</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="id" string="Workflow ID"/>
                    <field name="workflow_type"/>
                    <field name="workflow_stage_count"/>
                    <field name="curr_workflow_stage"/>
                    <field name="curr_workflow_stage_index"/>
                    <field name="workflow_completed"/>
                </tree>
            </field>
        </record>
    </data>
</odoo>